{
    "compilerOptions": {
      "jsx": "react",
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["es2017", "dom"],
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "strict": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": ["test", "src"]
}